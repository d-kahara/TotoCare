<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group.TotoCare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".User_Interface.MainActivity" />
        <activity android:name=".Fragments.HomeFragment" />
        <activity android:name=".Fragments.BabyFragment" />
        <activity android:name=".Fragments.CheckUpsFragment" />
        <activity android:name=".Fragments.CommunityFragment" />
        <activity
            android:name=".User_Interface.SettingsActivity"
            android:parentActivityName=".User_Interface.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".User_Interface.MainActivity" />
        </activity>
        <activity
            android:name=".User_Interface.CommunityActivity"
            android:parentActivityName=".User_Interface.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".User_Interface.MainActivity" />
        </activity>
        <activity android:name=".User_Interface.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Fragments.RecipeFragment" />
        <activity android:name=".User_Interface.RecipeActivity" />
        <activity android:name=".User_Interface.RecipeDetailActivity" />
        <activity android:name=".User_Interface.week4Activity" />
        <activity android:name=".User_Interface.week8Activity" />
        <activity android:name=".User_Interface.week16Activity" />
        <activity android:name=".User_Interface.week20Activity" />
        <activity android:name=".User_Interface.week24Activity" />
        <activity android:name=".User_Interface.week32Activity" />
        <activity android:name=".User_Interface.week36Activity" />
        <activity android:name=".User_Interface.week40Activity"></activity>
    </application>

</manifest>